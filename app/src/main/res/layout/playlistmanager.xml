<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151414"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/playlistmanagerButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="restoreDefault"
            android:text="Restore Default" />

        <Button
            android:id="@+id/playlistManagerButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNewPlaylist"
            android:text="Add new Playlist" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/playlistmanagerButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showSelected"
            android:text="Selected" />

        <Button
            android:id="@+id/playlistmanagerButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showOffered"
            android:text="Offered" />
    </LinearLayout>

    <TextView
        android:id="@+id/playlistManagerTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Info"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ListView
            android:id="@+id/playlistManagerListView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ListView
            android:id="@+id/playlistManagerListView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>

